@using OrnekSite.Entity
@model IEnumerable<Product>

<div id="myCarousel" class="carousel slide homCar">
    <div class="carousel-inner">

        <div class="item active">
            <img style="width:100%" src="/Site/assets/img/carousel1.png" alt="bootstrap ecommerce templates">
            <div class="carousel-caption">
                <h4>Bootstrap Ecommerce template</h4>
                <p><span>Highly Google seo friendly</span></p>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <a href="/Home/ProductDetail/@item.Id"> <img style="width:100% ;max-width:698px; max-height:327px; min-height:327px; min-width:698px"  src="~/Content/img/@item.Image" alt="bootstrap templates"></a>
                <div class="carousel-caption">
                    <h4 >Ağustos ayına ÖZEL @item.Name ürünlerinde</h4>
                    <p><span>Fiyatı sadece  @item.Price ₺</span></p>
                </div>
            </div>

        }
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div>