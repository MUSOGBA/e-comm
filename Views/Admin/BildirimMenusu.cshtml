@using OrnekSite.Entity
@model IEnumerable<Order>

<li class="dropdown notifications-menu open">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
        <i class="fa fa-bell-o"></i>
        <span class="label label-warning">@Model.Count()</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header"><strong>Bildirimler</strong>(Bekleyen Siparişler)</li>
        <li>
            <!-- inner menu: contains the actual data -->
            <ul class="menu">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/Order/Details/@item.Id">
                            <strong>@item.UserName</strong> Sipariş Bekliyor
                        </a>
                    </li>
                }


            </ul>
        </li>
        @if (Model.Count()>0)
        {
        <p> Bildirimleriniz</p>
        }
        else
        {
        <span>Bildirim Yok</span>
        }
    </ul>
</li>
